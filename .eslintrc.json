{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "quotes": [1, "single", { "allowTemplateLiterals": true }],
        "max-len": [1, 120, 2, {"ignoreComments": true}],
        "indent": ["error", 4]
    }
}
