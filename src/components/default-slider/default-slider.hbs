<div class="slider">
    <i class="slider__prev-button fas fa-chevron-left"></i>
    <div class="slider__container">
        <div class="slider__track">
            {{#each slides}}
                <div class="slider-item">
                    <div class="slider-item__wrap">
                        <div class="slider-item__img" style="background-image: url({{ img }})"></div>
                        <div class="slider-item__title">{{ title }}</div>
                    </div>
                </div>
            {{/each }}
        </div>
    </div>
    <i class="slider__next-button fas fa-chevron-right"></i>
</div>
