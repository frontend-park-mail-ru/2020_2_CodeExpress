<div class="sub-menu">
    <div class="sub-menu__links">
        <i class="sub-menu__link fas fa-chevron-left"></i>
        <i class="sub-menu__link fas fa-chevron-right"></i>
    </div>
    <form action="#" class="sub-menu__search">
        <input type="search" class="sub-menu__search-input" placeholder="Поиск...">
        <i class="sub-menu__search-icon fas fa-search"></i>
    </form>
    <div class="sub-menu__profile">
        {{# if load }}
            <div class="sub-menu__profile-nickname link-btn" data-url="/profile/" >{{ username }}</div>
            {{# if isAvatar }}
                <img class="sub-menu__profile-avatar" src="http://musicexpress.sarafa2n.ru:8080{{ avatar }}">
            {{else}}
                <i class="sub-menu__profile-avatar fas fa-user-circle"></i>
            {{/if}}
        {{else}}
            <div class="primary-header-button link-btn" data-url="/login/">Войти</div>
            <div class="secondary-header-button link-btn" data-url="/signup/">Зарегистрироваться</div>
        {{/if}}
    </div>
</div>
