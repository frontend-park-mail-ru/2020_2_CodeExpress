{{#each tracks}}
    <div class="track-item">
        <div class="track-item__album" data-audio="{{ audio }}">
            <i class="track-item__play-button fas fa-play"></i>
            <img class="track-item__img" src="{{ album }}">
        </div>
        <div class="track-item__information">
            <div class="track-item__title">{{ title }}</div>
            <div class="track-item__group">{{ group }}</div>
        </div>
        <div class="track-item__duration">{{ duration }}</div>
    </div>
{{/each}}
