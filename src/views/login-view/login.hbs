<div class="login-page" style="background-image: url({{ img.default }})">
    <div class="login-page__wrapper">
        <div class="login-page__content">
            <div class="login-page__logo link-btn" data-url="/">
                <i class="fas fa-compact-disc login-page__logo-icon"></i>MusicExpress
            </div>
            <div class="login-page__title">Вход</div>
            <div class="login-page__errors"></div>
            <form class="form-login">
                <input class="form-login__input" type="text" name="login" placeholder="Почта">
                <input class="form-login__input" type="password" name="password" placeholder="Пароль">
                <div class="form-login__wrapper">
                    <div class="form-login__change-password">Забыли пароль?</div>
                    <input class="form-login__submit button-primary" type="submit" value="Войти">
                </div>
            </form>
            </form>
        </div>
    </div>
    <div class="login-page__helper">
        Нет аккаунта?
        <div class="login-page__link button-secondary">Зарегистрироваться</div>
    </div>
</div>
