<div class="profile-page">
    <div class="profile-content profile-info">
        <div class="profile-content__wrapper">
            <div class="content-item">
                <div class="content-item__title content-item__title_profile">Информация о пользователе</div>
                <div class="profile__item">
                    <img class="profile__avatar" src="../../assets/icons/user-circle-solid.svg">
                    <form class="form-input">
                        <input class="default-input" type="text" name="login" placeholder="example@mail.ru">
                        <input class="default-input" type="text" name="mail" placeholder="Nickname">
                        <input type="submit" class="primary-button" value="Сохранить">
                    </form>
                </div>
                    <div class="profile_item">
                        <div class="content-item__title content-item__title_profile secondary-title">Сменить пароль</div>
                        <form class="form-input">
                            <div class="form-input__item">
                                Новый пароль
                                <input class="default-input" type="text" name="new-password">
                            </div>
                            <div class="form-input__item">
                                Повторите пароль
                                <input class="default-input" type="text" name="new-password">
                            </div>
                            <input type="submit" class="primary-button" value="Сохранить">
                        </form>
                    </div>
            </div>
        </div>
    </div>
    <div class="profile-content">
        <div class="profile-content__wrapper">
            <div class="content-item">
                <div class="content-item__title content-item__title_profile">Настройка портала</div>
                <div class="profile__item">
                    Тёмная тема
                    <label class="button-switch">
                        <input class="button-switch__input" type="checkbox">
                        <span class="button-slider round"></span>
                    </label>
                </div>
                <div class="profile__item">
                    Язык
                    <select name="select-language">
                        <option value="value1">Русский</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>
